---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import {Image} from "astro:assets";

import bg_banner from "../assets/background/background_main.jpg";
import logo from "../assets/appImage/logo.svg";

---

<Layout title="Vertrix">
    <section class="relative w-full h-[90vh]">
        <Image
                src={bg_banner}
                alt="background_banner"
                class="absolute inset-0 w-full h-full object-cover"
        />

        <div class="absolute inset-0 bg-black/50"></div>

        <div class="relative z-10 flex h-full flex-col items-center justify-center px-4 text-center">

            <Image
                    src={logo}
                    alt="Logo Vertrix"
                    class="h-[100px] w-auto"
            />

            <h1 class="text-3xl font-bold text-white md:text-5xl">
                Redefining Mobility
            </h1>
            <p class="mt-4 text-lg text-gray-200 md:text-xl">
                The future of garage storage is here.
            </p>

        </div>
    </section>

    <div> Servicios </div>

    <section class="flex justify-center">
        <div class="flex w-8/10 justify-center gap-4">
            <div class="flex-col items-center w-1/2">
                <h2>Creación de vertrix</h2>
                <p>
                    VERTRIX nace de la unión entre “vértice” (el punto donde todo converge) y “matrix” (el sistema donde
                    todo se crea y cobra forma). Representa el lugar exacto donde las ideas se encuentran, se transforman
                    y se convierten en realidad.
                </p>
            </div>
            <div class="flex-col items-center w-1/2">
                <div>Images</div>
            </div>
        </div>
    </section>
    <div> Miembros</div>
    <div> Asignaciones </div>
</Layout>
