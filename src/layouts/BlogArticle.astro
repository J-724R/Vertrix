---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BlogNavbar from "../components/BlogNavbar.astro";

interface Props{
    title: string;
    date: string;
}

const { title, date } = Astro.props;
const	currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="min-h-screen w-screen m-0">
        <Header />
        <div class="flex w-full">
            <div class="bg-black relative flex flex-col items-center justify-center w-full text-white">
                <div class="w-[1050px] h-[500px]">
                    <slot name="banner"/>
                </div>
                <div class="flex flex-col w-70/100 items-center justify-between">
                    <div class="bg-secondary flex flex-col items-center justify-around w-[900px] h-[140px] border-b-1 border-b-accent">
                        <div>{date}</div>
                        <div class="text-3xl">{title}</div>
                    </div>
                    <div class="flex flex-col justify-center w-7/10 my-0 py-6 px-10">
                        <slot/>
                    </div>
                </div>
            </div>
        </div>

        <Footer />
    </body>
</html>
